// Place your key bindings in this file to override the defaults
[
  {
    "key": "shift+;",
    "command": "vim.showQuickpickCmdLine",
    "when": "inZenMode && vim.mode != Insert"
  },

  /* 
   * Vim pane nav. Defined here instead of in
   * "vim.normalModeKeyBindingsNonRecursive" in settings so that these bindings
   * work across the entire editor (outside of just text focused areas)
   */
  {
    "key": "tab",
    "command": "workbench.action.nextEditorInGroup",
    "when": "!editorTextFocus"
  },
  {
    "key": "shift+tab",
    "command": "workbench.action.previousEditorInGroup",
    "when": "!editorTextFocus"
  },

  {
    "key": "alt+-",
    "command": "workbench.action.splitEditorDown",
    "when": "!editorTextFocus"
  },
  {
    "key": "alt+=",
    "command": "workbench.action.splitEditorRight",
    "when": "!editorTextFocus"
  },

  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "!editorTextFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown",
    "when": "!editorTextFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp",
    "when": "!editorTextFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "!editorTextFocus"
  },

  // Repeated since || doesn't work in when clauses
  {
    "key": "tab",
    "command": "workbench.action.nextEditorInGroup",
    "when": "vim.mode == Normal"
  },
  {
    "key": "shift+tab",
    "command": "workbench.action.previousEditorInGroup",
    "when": "vim.mode == Normal"
  },

  {
    "key": "alt+-",
    "command": "workbench.action.splitEditorDown",
    "when": "vim.mode == Normal"
  },
  {
    "key": "alt+=",
    "command": "workbench.action.splitEditorRight",
    "when": "vim.mode == Normal"
  },

  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "vim.mode == Normal"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown",
    "when": "vim.mode == Normal"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp",
    "when": "vim.mode == Normal"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "vim.mode == Normal"
  },
]
